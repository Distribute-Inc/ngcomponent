{
  "name": "ngcomponent",
  "version": "1.0.0",
  "description": "Angular components with React-style APIs",
  "main": "index.js",
  "main:esnext": "index.es2015.js",
  "typings": "index.d.ts",
  "scripts": {
    "build": "tsc -d -m es2015 --outDir .; mv ./index.js ./index.es2015.js; tsc -m commonjs --outDir .;",
    "postinstall": "typings install",
    "tdd": "npm run watch & karma start",
    "test": "karma start --log-level debug --single-run",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/bcherny/ngcomponent.git"
  },
  "keywords": [
    "angular",
    "component",
    "react",
    "directive",
    "props",
    "state",
    "controller"
  ],
  "author": "Boris Cherny <boris@performancejs.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bcherny/ngcomponent/issues"
  },
  "homepage": "https://github.com/bcherny/ngcomponent#readme",
  "devDependencies": {
    "angular-mocks": "^1.5.7",
    "ava": "^0.15.2",
    "browserify": "^13.0.1",
    "jasmine": "^2.4.1",
    "jasmine-core": "^2.4.1",
    "karma": "^1.1.1",
    "karma-browserify": "^5.0.5",
    "karma-chrome-launcher": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.0.4",
    "karma-source-map-support": "^1.1.0",
    "rollupify": "^0.3.2",
    "typescript": "^1.8.10",
    "typings": "^1.3.1",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "angular": "^1.5.7",
    "lodash": "^4.13.1"
  }
}
