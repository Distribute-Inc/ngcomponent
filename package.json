{
  "name": "ngcomponent",
  "version": "2.0.0",
  "description": "A clean React-like abstraction for rendering non-Angular components within an Angular app.",
  "main": "index.js",
  "main:esnext": "index.es2015.js",
  "typings": "index.d.ts",
  "scripts": {
    "build": "rm -f index.d.ts && tsc -d -m es2015 --outDir . && mv ./index.js ./index.es2015.js && tsc -m commonjs -t es5  --outDir .",
    "tdd": "npm run watch & karma start",
    "test": "npm run build && karma start --single-run",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/bcherny/ngcomponent.git"
  },
  "keywords": [
    "angular",
    "component",
    "react",
    "directive",
    "props",
    "state",
    "controller"
  ],
  "author": "Boris Cherny <boris@performancejs.com>",
  "contributors": [
    "Chris Khoo"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bcherny/ngcomponent/issues"
  },
  "homepage": "https://github.com/bcherny/ngcomponent#readme",
  "devDependencies": {
    "@types/angular-mocks": "^1.5.5",
    "@types/jasmine": "^2.2.34",
    "browserify": "^13.0.1",
    "jasmine": "^2.4.1",
    "jasmine-core": "^2.4.1",
    "karma": "^1.1.1",
    "karma-browserify": "^5.0.5",
    "karma-chrome-launcher": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.0.4",
    "karma-source-map-support": "^1.1.0",
    "ngimport": "^0.2.2",
    "rollupify": "^0.3.2",
    "tslint": "^4.5.1",
    "tslint-no-circular-imports": "^0.1.0",
    "typescript": "^2.0.3",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "@types/angular": "^1.5.15",
    "@types/lodash": "^4.14.36",
    "angular": "^1.5.7",
    "lodash": "^4.13.1",
    "ngimport": "0.0.7"
  }
}
